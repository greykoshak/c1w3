    "import os.path\n",
    "\n",
    "filename = \"/file/not/found\"\n",
    "try:\n",
    "    if not os.path.exists(filename):\n",
    "        raise ValueError(\"Файл не существует\", filename)\n",
    "except ValueError as err:\n",
    "    message, file_name = err.args[0],err.args[1]\n",
    "    print(message+\":\", file_name)"
